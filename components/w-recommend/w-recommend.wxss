.recommend {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0rpx;
  border-bottom: 16rpx solid #eee;
}

.recommend-item {
  flex: 1;
  text-align: center;
}

.recommend-item image {
  width: 160rpx;
  height: 160rpx;
}

.recommend-item text {
  display: block;
  font-size: 28rpx;
}
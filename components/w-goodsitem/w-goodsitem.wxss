/* components/w-goods/w-goodsitem/w-goodsitem.wxss */
.goodsItem {
  margin: 10rpx;
  /* width: 340rpx; */
  height: 520rpx; 
}
.goodsimage {
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.info { 
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.info .title {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.info .price {
  color: #ff5777;
}

.info .icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0rpx 10rpx;
  vertical-align: bottom;
}